<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 投资交易中心</title>

    @*@using StackExchange.Profiling;*@

    @Styles.Render("~/Content/element")
    @*<link href="~/Content/element/theme-default/index.css" rel="stylesheet" />*@

    @Scripts.Render("~/bundles/vue", "~/bundles/element", "~/bundles/axios")

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery", "~/bundles/bootstrap")

    @Styles.Render("~/Content/global")
    @Styles.Render("~/Content/layout")
    @*<link href="~/Content/layout/_layout.css" rel="stylesheet" />*@
</head>
<body>

    <section class="db">
        <!-- header start  -->
        @Html.Partial("_HeaderPartial")
        <!-- header end  -->
        <!-- body start  -->
        <div class="db-body">
            <!-- menu start -->
            @Html.Partial("_MenuPartial")
            <!-- menu end -->
            <!-- content start -->
            <div class="db-content-wrapper">
                <section class="db-content">
                    @RenderBody()
                </section>
            </div>
            <!-- content end -->
        </div>
        <!-- body end  -->
    </section>

    @RenderSection("scripts", required: false)
    @*@MiniProfiler.RenderIncludes();*@
</body>
</html>